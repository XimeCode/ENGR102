
from math import *

#Ask for user input
num1 = (input("Enter number 1:"))
num2 = (input("Enter number 2:"))
num3 = (input("Enter number 3:"))


#check for greater number
if (num1 > num2):
    greatest = num1
elif (num2 > num3):
    greatest = num2
else:
    greatest = num3

#state greatest
print ("The largest number is " + greatest)
